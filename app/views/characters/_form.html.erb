<%= simple_form_for [@source_material, @character], :html => { :multipart => true } do |f| %>

    <%= f.input :name %>
    <%= f.input :bio %>
    <%= f.input :handle %>
    <p>
    <%= f.label :asset, "File" %><br>
    <%= f.file_field :asset %>
    </p>

    <%= f.submit class: "small button success radius" %>

<% end %>
