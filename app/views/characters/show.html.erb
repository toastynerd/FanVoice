<div id="character" >
<h2><%= @character.name %></h2>
<span id="author">Created by <%= @character.user %></span>

<p id="notice"><%= notice %></p>

<p>
  <b>Bio:</b>
  <%= @character.bio %>
  <%= simple_format(@character.bio) %>
</p>
<p>
  <b>Handle:</b>
  <%= @character.handle %>
</p>
  <div class="character_profile">
  <%= image_tag @character.image_url(:thumb).to_s if @character.image? %>
  </div>

<%= link_to "New Tweet", new_source_material_character_tweet_path(@source_material, @character), :class => "button" %>
<%= link_to "Add Twitter Account", "/auth/twitter", :class => "button" %>
<% authorized?("edit characters", @source_material) do %>
  <%= link_to "Edit Character", [:edit, @source_material, @character], :class => "button" %>
<% end %>
<% authorized?("delete characters", @source_material) do %>
<%= link_to "Delete Character",
        source_material_character_path(@source_material, @character),
        :method => :delete,
       :confirm => "Are you sure you want to delete this character?", :class => "button"%>
<% end %></br>
<%= link_to 'Back', @source_material %>
