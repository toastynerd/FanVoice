<div id="character" >
<h2><%= @character.name %></h2>
<span id="author">Created by <%= @character.user.email %></span>

<p id="notice"><%= notice %></p>

<p>
  <b>Bio:</b>
  <%= @character.bio %>
  <%= simple_format(@character.bio) %>
</p>
<p>
  <b>Handle:</b>
  <%= @character.handle %>
</p>


<%= link_to "New Tweet", new_source_material_character_tweet_path(@source_material, @character), :class => "button" %>
<%= link_to "Add Twitter Account", "/auth/twitter", :class => "button expand" %>
<%= authorized?("edit characters", @source_material) do %>
  <%= link_to "Edit Character", [:edit, @source_material, @character] %>

<%= authorized?("delete characters", @source_material) do %>
<%= link_to "Delete Character",
        source_material_character_path(@source_material, @character),
        :method => :delete,
       :confirm => "Are you sure you want to delete this character?" %>
<%= link_to 'Back', source_material_characters_path %>
