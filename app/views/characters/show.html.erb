<div id="character" >
<h2><%= @character.name %></h2>
<span id="author">Created by <%= @character.user %></span>

<p id="notice"><%= notice %></p>

<p>
  <b>Bio:</b>
  <%= @character.bio %>
  <%= simple_format(@character.bio) %>
</p>
<p>
  <b>Handle:</b>
  <%= @character.handle %>
</p>
  <div class="character_profile">
  <%= image_tag @character.image_url(:thumb).to_s if @character.image? %>
  </div>

<%= link_to "New Tweet", new_character_tweet_path(@character), :class => "button" %>
<%= link_to "Add Twitter Account", "/auth/twitter", :class => "button" %>
  <%= link_to "Edit Character", [:edit, @character], :class => "button" %>
<%= link_to "Delete Character",
        @character,
        :method => :delete,
        :confirm => "Are you sure you want to delete this character?", :class => "button"%></br>

<div class="panel large-10" id="tweets">
  <% @character.tweets.each do |tweet| %>
    <div id="<%= tweet.id  %>">
      Tweet: <%= tweet.body %></br>
      Scheduled for:  <%= tweet.post_at %></br>
      <%= link_to "edit", [:edit, @character, tweet], :class => "button" %>
      <%= link_to "destroy", [@character, tweet], :method => :delete,
        :confirm => "Are you sure?", :class => "button"  %></br>
    </div>
  <% end %>
</div>
